                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href='@Url.Action("Index", "Home")'>Inicio <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Index", "Clientes")'>Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Index","Reparacions")'>Reparaciones</a>
                        </li>
                        
                    </ul>
                    
                    
                </div>
                </nav>

                @*<div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="nav navbar-nav">
