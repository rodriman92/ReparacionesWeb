@model IEnumerable<ReparacionesWeb.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h1>Listado de Clientes</h1>

<form asp-controller="Clientes" asp-action="Index" method="get">
    <p>
        Buscar cliente: <input type="text" name="searchString">
        <input type="submit" value="Buscar" />

        <input type="submit" name="IndexActualizadocv" value="Actualizar lista" />
    </p>
</form>



<p>

    @Html.ActionLink("Crear", "Create", null, new { @class = "btn btn-primary btn-large" })
</p>
<table class="table table-sm table-dark">
    <thead class= "thead-dark">
        <tr class="table-primary">
            <th table table-sm table-dark>
                @Html.DisplayNameFor(model => model.ApeNombre)
            </th>
            <th table table-sm table-dark>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th table table-sm table-dark>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th table table-sm table-dark>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th table table-sm table-dark>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th table table-sm table-dark>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApeNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localidad)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ClienteID }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.ClienteID }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ClienteID })
                </td>
            </tr>
        }
        </thead>
</table>
